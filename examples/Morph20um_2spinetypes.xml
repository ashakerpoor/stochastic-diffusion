<Morphology>

   <!-- spine morphologies: width for sections along the spine -->
    <SpineType id="mushroom">
	<Section width="0.2" at="0.0" regionClass="neck"/>
	<Section width="0.2" at="0.2" regionClass="neck"/>
	<Section width="0.2" at="0.3" regionClass="head"/>
	<Section width="0.6" at="0.4" regionClass="head"/>  
	<Section width="0.6" at="0.5" regionClass="PSD"/>
	<Section width="0.2" at="0.6" label="pointA"/>
    </SpineType>

    <SpineType id="stubby">
	<Section width="0.2" at="0.0" regionClass="neck"/>
	<Section width="0.2" at="0.1" regionClass="neck"/>
	<Section width="0.2" at="0.2" regionClass="head"/>
	<Section width="0.2" at="0.3" regionClass="head"/>  
	<Section width="0.2" at="0.4" regionClass="PSD"/>
	<Section width="0.2" at="0.4" label="pointB"/>
    </SpineType>

    <!-- lengthDensity means you set the number per micron along the segment -->
    <SpineAllocation id="saA" spineType="mushroom" region="dend" lengthDensity="0.6"/>

    <SpineAllocation id="saB" spineType="stubby" region="dend" lengthDensity="0.4"/>

    <Segment   id="seg1"    region="dend">
        <start x="1.0"    y="1.5"   z="0.0"  r="0.45" label="pointC"/>
        <end   x="21.0"   y="1.5"   z="0.0"  r="0.45" label="pointD"/>
    </Segment>

</Morphology>
