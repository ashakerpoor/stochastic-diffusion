<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN" packages="neurord.util">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %replace{%level}{(.).*}{$1} %logger{1.} - %msg%n}"/>
    </Console>

    <CustomFile name="model-logfile" fileName="...">
        <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %logger{1.} - %msg%n"/>
    </CustomFile>

  </appenders>
  <loggers>
    <root level="debug">
      <appender-ref ref="Console"/>
      <appender-ref ref="model-logfile"/>
    </root>
    <logger name="neurord.numeric.grid.ResultWriterHDF5" level="info" />
    <logger name="neurord.numeric.grid.ResultWriterText" level="info" />
    <logger name="neurord.numeric.grid.NextEventQueue" level="info" />
  </loggers>
</configuration>
