<Morphology>

  <!-- 1 spine not using spine type and spine allocation, and which works with injection -->

  <Segment id="seg1" region="dendrite">
	<start x="2.0" y="1.0" z="0.0" r="0.2"/>
	<end x="4.0" y="1.0" z="0.0" r="0.2"/>
  </Segment>

  <Segment id="seg2" region="neck">
	<start on="seg1" atFraction="0.5" r="0.1"/>
	<end x="3.0" y = "1.6" z = "0.0" r = "0.1"/>
  </Segment>


  <Segment id="seg3" region="head">
	<start on="seg2" at="end"/>
	<end x="3.0" y="2.0" z = "0.0" r="0.3" label="pointA"/>
  </Segment>

